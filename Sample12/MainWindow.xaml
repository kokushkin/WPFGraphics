<Window x:Class="Sample12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="817.115" Width="574.808">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Ellipse Margin="5" Stretch="Uniform">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="White" Offset="0"></GradientStop>
                    <GradientStop Color="Orange" Offset="1"></GradientStop>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse  Margin="5" Stretch="Uniform" Grid.Row="1">
            <Ellipse.Fill>
                <RadialGradientBrush GradientOrigin="0.85,0.85">
                    <GradientStop Color="White" Offset="0"></GradientStop>
                    <GradientStop Color="Orange" Offset="1"></GradientStop>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</Window>
